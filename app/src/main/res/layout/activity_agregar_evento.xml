<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yairrovero.myapplication.AgregarEventoActivity">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/seleccion_los_d_as_del_evento_de_forma_consecutiva" />

        <CalendarView
            android:id="@+id/CVAddEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="171dp"
            android:layout_alignParentBottom="true" />

        <ListView
            android:id="@+id/LVDiasAddEvento"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/textView3"
            android:layout_alignStart="@+id/CVAddEvento"
            android:layout_marginEnd="126dp"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="309dp" />

        <Button
            android:id="@+id/btnAddEventCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView3"
            android:layout_alignTop="@+id/LVDiasAddEvento"
            android:layout_marginTop="57dp"
            android:text="@string/continuarAddEvent1" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
